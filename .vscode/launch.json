{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [  
    {
      "name": "Mac Launch(Release)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceRoot}/macOS/StellarEngine.app/Contents/MacOS/Sandbox",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/Sandbox",
      "environment": [{ "name": "DYLD_LIBRARY_PATH", "value": "${workspaceFolder}/Sandbox/release/bin" }],
      "externalConsole": false,
      "MIMode": "lldb",
      "preLaunchTask": "Build Engine(Release)"
    },
    {
      "name": "Mac Launch(Debug)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceRoot}/Sandbox/debug/bin/Sandbox",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/Sandbox",
      "environment": [{ "name": "DYLD_LIBRARY_PATH", "value": "${workspaceFolder}/Sandbox/debug/bin" }],
      "externalConsole": false,
      "MIMode": "lldb",
      "preLaunchTask": "Build Engine(Debug)"
    },
    {
      "name": "Linux Launch(Release)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceRoot}/Sandbox/release/bin/Sandbox",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/Sandbox",
      "environment": [ { "name": "LD_LIBRARY_PATH", "value": "${workspaceFolder}/Sandbox/release/bin" }],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
          {
              "description": "Enable pretty-printing for gdb",
              "text": "-enable-pretty-printing",
              "ignoreFailures": true
          },
          {
              "description":  "Set Disassembly Flavor to Intel",
              "text": "-gdb-set disassembly-flavor intel",
              "ignoreFailures": true
          }
      ],
      "preLaunchTask": "Build Engine(Release)"
    },
    {
      "name": "Linux Launch(Debug)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceRoot}/Sandbox/debug/bin/Sandbox",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/Sandbox",
      "environment": [ { "name": "LD_LIBRARY_PATH", "value": "${workspaceFolder}/debug/Sandbox/bin" }],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
          {
              "description": "Enable pretty-printing for gdb",
              "text": "-enable-pretty-printing",
              "ignoreFailures": true
          },
          {
              "description":  "Set Disassembly Flavor to Intel",
              "text": "-gdb-set disassembly-flavor intel",
              "ignoreFailures": true
          }
      ],
      "preLaunchTask": "Build Engine(Debug)"
    }
  ]
}