  "version": "0.2.0",
  "configurations": [  
    {
      "name": "(Windows) Launch",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceRoot}/Sandbox/bin/Sandbox",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/Sandbox",
      "environment": [],
      "externalConsole": false,
      "preLaunchTask": "Build Engine"
    },
    {
      "name": "(gdb) Launch",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceRoot}/Sandbox/bin/Sandbox",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/Sandbox",
      "environment": [ { "name": "LD_LIBRARY_PATH", "value": "${workspaceFolder}/Sandbox/bin" }],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
          {
              "description": "Enable pretty-printing for gdb",
              "text": "-enable-pretty-printing",
              "ignoreFailures": true
          },
          {
              "description":  "Set Disassembly Flavor to Intel",
              "text": "-gdb-set disassembly-flavor intel",
              "ignoreFailures": true
          }
      ],
      "preLaunchTask": "Build Engine"
    }
  ]
}